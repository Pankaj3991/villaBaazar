<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissable fade show col-6 offset-3 mt-2"
    style="text-align: center;"
     role="alert"> <%= success %>
     <button type="button" class="btn-close lg-m-4 sm-m-1" data-bs-dismiss="alert" aria-label="Close"></button>
     </div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissable fade show col-6 offset-3 mt-2"
    style="text-align: center;"
     role="alert"> <%= error %>
     <button type="button" class="btn-close lg-m-4 sm-m-1" data-bs-dismiss="alert" aria-label="Close"></button>
     </div>
<% } %>